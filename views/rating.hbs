<!DOCTYPE html>
<html>
<link rel="stylesheet" type="text/css" href="rating_music.css">

<head>
    <meta charset="utf-8">
    <title>{{title}}</title>
</head>

<body>
    {{>headbar}}
    <div id="bg"></div>
    <form method="POST" action="/rating">
        <input type="text" id="searchbar" placeholder="Search music world" name="song" />
    </form>
    <div id="display">
        <div id="player">
            <iframe width="550" height="315" src={{link}}>
            </iframe>
            <h1 id="title">{{title}}</h1>
            <form method="POST" action="/">
                <input id="songname" type="hidden" name="song" value="{{link}}" />Favourite
                <!-- <input type="hidden" name="acct" value="{{data.acct}}"> -->
                <input type="hidden" name="login" value={{login}}>
                <input type="hidden" name="home" value={{home}}>
                <input type="hidden" name="link" value={{link}}>
                <input type="hidden" name="ranking" value={{ranking}}>
                <input type="hidden" name="playlist" value={{playlist}}>
                <input type="hidden" name="index" value={{index}}>
                <input type="hidden" name="searchindex" value={{searchindex}}>
                <input type="hidden" name="acct" value={{acct}}>
                <input type="checkbox" id="favourite" name="favourite" />
                <div id="ratingsongs">
                    <label>1</label>
                    <input type="radio" name="rating" value="1" />
                    <label>2</label>
                    <input type="radio" name="rating" value="2" />
                    <label>3</label>
                    <input type="radio" name="rating" value="3" />
                    <label>4</label>
                    <input type="radio" name="rating" value="4" />
                    <label>5</label>
                    <input type="radio" name="rating" value="5" checked="checked" />
                    <input type="submit" value="OK">
                </div>
            </form>
        </div>
        <img class="thumbnails" src={{thumbnail}}></img>
    </div>
</body>

</html>