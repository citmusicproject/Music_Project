    <script>
        var pl = document.getElementsByClassName("playlist"),
            bg = document.getElementById("bg"),
            display = document.getElementById("display"),
            playlistcontent = document.getElementById("playlistcontent"), 
            addbutton = document.getElementById("addbutton");

        for (let index = 0; index < pl.length; index++) {
            const element = pl[index];
            console.log(pl);
            element.addEventListener("mouseover", function () {
                element.style.filter = "brightness(80%)";
            });
            element.addEventListener("mouseout", function () {
                element.style.filter = "brightness(100%)";
            });
            element.addEventListener("click", function () {
                if (playlistcontent.style.left != "") {
                    element.style.boxShadow = "0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)";
                    playlistcontent.style.cssText = "";
                    playlistcontent.innerHTML = "";
                } else {
                    element.style.boxShadow = "0 0px 0px 0 rgba(0, 0, 0, 0.2), 0 0px 0px 0 rgba(0, 0, 0, 0.19)";
                    playlistcontent.style.left = (200 * index + 200).toString() + "px";
                    playlistcontent.style.height = "500px";
                    playlistcontent.style.width = "500px";
                    playlistcontent.style.display = "block";
                    playlistcontent.style.transition = "1s";
                    playlistcontent.innerHTML = element.children[1].innerHTML;
                }
            });
        }
        addbutton.addEventListener("click", function(){
            var newplaylist = document.createElement("div");
            newplaylist.className = "playlist";
            display.appendChild(newplaylist);
            var newimg = document.createElement("img");
            newimg.src = "http://isaiaruvy.com/uploads/songs/default.png";
            newimg.style.height = "200px";
            newimg.style.width = "200px";
            newplaylist.appendChild(newimg);
            var newname = document.createElement("div");
            newname.className = "playlistName";
            var newtextfield = document.createElement("input");
            newtextfield.setAttribute = ("type", "text");
            newtextfield.value = "new playlist";
            newtextfield.className = "textfield";
            newname.appendChild(newtextfield);
            newplaylist.appendChild(newname);
            
        });
        
    </script>
</body>
</html>